@model Click_Cart.Models.Category

@* @{ *@
@*     ViewData["Title"] = "Register"; *@
@* } *@

<div class="d-flex justify-content-center align-items-center h-100">
    <div class="card shadow border-0 mt-4 col-6">
        @* <div class="card shadow border-0 mt-4" style="margin-bottom:80px"> *@
        <div class="card-header bg-primary bg-gradient ">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-center text-white mt-2">Add Category</h1>
                </div>
            </div>

        </div>
        <div class="card-body p-4">
            <form asp-action="AddCategory" method="post" class="row">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="border p-3">

                    <input asp-for="CategoryId" value="0" class="form-control border-0 shadow" hidden />

                    <div class="form-floating py-2 col-12">
                        <input asp-for="CategoryName" class="form-control border-0 shadow border-0 shadow" />
                        <label asp-for="CategoryName">Name <span class="text-danger h4">*</label>
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="row mt-4 d-flex justify-content-center">
                        <div class="row col-12 ">
                            <a asp-area="Admin" asp-controller="CategoryDetails" asp-action="Index" class="btn btn-dark border btn-md col-12 col-sm-6 p-2">Back To List</a>
                            <button type="submit" asp-area="Admin" asp-controller="CategoryDetails" asp-action="AddCategory" class="btn btn-primary border btn-md col-12 col-sm-6 p-2">Add Category</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
